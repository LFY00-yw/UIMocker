<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llx278.uimockerdemo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/container_1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text1"
                android:id="@+id/container_1_text_1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button1"
                android:id="@+id/container_1_button_1"
                />
            <com.llx278.uimockerdemo.widget.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytext1"
                android:id="@+id/container_1_mytext_1"
                />
            <com.llx278.uimockerdemo.widget.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mybutton1"
                android:id="@+id/container_1_mybutton_1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am inVisible"
                android:id="@+id/container_1_invisible_text_1"
                android:visibility="invisible"
                />
            <com.llx278.uimockerdemo.widget.UniqueButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:id="@+id/container_1_unique_button_1"
                android:text="buttonHollder"
                />

            <com.llx278.uimockerdemo.widget.UniqueButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:id="@+id/container_1_unique_button_2"
                android:text="buttonHollder"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/container_2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text1"
                android:id="@+id/container_2_text_1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button2"
                android:id="@+id/container_2_button_1"
                />
            <com.llx278.uimockerdemo.widget.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytext1"
                android:id="@+id/container_2_mytext_1"
                />
            <com.llx278.uimockerdemo.widget.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mybutton1"
                android:id="@+id/container_2_mybutton_1"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/container_3"
        >
        <ScrollView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/container_3_scrollview_1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText1"
                    android:id="@+id/container_3_scrollview_1_text_1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText2"
                    android:id="@+id/container_3_scrollview_1_text_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText3"
                    android:id="@+id/container_3_scrollview_1_text_3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText4"
                    android:id="@+id/container_3_scrollview_1_text_4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText5"
                    android:id="@+id/container_3_scrollview_1_text_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText6"
                    android:id="@+id/container_3_scrollview_1_text_6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText7"
                    android:id="@+id/container_3_scrollview_1_text_7"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scrollText1"
                    android:id="@+id/container_3_scrollview_1_text_8"
                    />
            </LinearLayout>
        </ScrollView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/container_3_scrollview_2"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/container_3_scrollview_2_bt1"
                    android:text="hBt1"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hBt2"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hBt3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hBt4"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hBt5"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hBt6"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hBt7"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hBt8"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/container_4"
        >
        <ListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/container_4_list_view1"
            />
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/container_4_scroll_view2"
            />
        <WebView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/container_4_web_view3"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/container_4_recycler_view4"
            />
    </LinearLayout>
</LinearLayout>